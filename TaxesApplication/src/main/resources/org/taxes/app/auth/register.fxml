<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vBox" alignment="CENTER" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #5AB2FF;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.taxes.app.auth.RegisterController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
   <TextField fx:id="email" promptText="Email" style="-fx-background-radius: 20;">
      <font>
         <Font size="14.0" />
      </font></TextField>
   <ChoiceBox fx:id="accountType" prefWidth="290.0" style="-fx-background-radius: 20; -fx-font-size: 14px;" />
   <TextField fx:id="firstName" promptText="First Name" style="-fx-background-radius: 20;">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <TextField fx:id="lastName" promptText="Last Name" style="-fx-background-radius: 20;">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <DatePicker fx:id="birthDate" prefWidth="290.0" promptText="Birth Date" />
   <PasswordField fx:id="password" promptText="Password" style="-fx-background-radius: 20;">
      <font>
         <Font size="14.0" />
      </font></PasswordField>
   <PasswordField fx:id="confirmPassword" promptText="Confirm Password" style="-fx-background-radius: 20;">
      <font>
         <Font size="14.0" />
      </font>
   </PasswordField>
 <Button mnemonicParsing="false" onAction="#onRegister" prefWidth="100.0" style="-fx-background-radius: 20;" text="Register">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Button>
   <Label onMouseClicked="#toLogIn" text="Already have an account?" textFill="WHITE" underline="true" wrapText="true">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
</VBox>
